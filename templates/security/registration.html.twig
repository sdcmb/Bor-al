{% extends 'base.html.twig' %}

{% block body %}
  <h1>Inscitpion</h1>

  {{ form_start(form) }}
    {{ form_row(form.firstname, {'label': 'Prénom','attr': {'placeholder': 'Prénom'}}) }}
    {{ form_row(form.lastname, {'label': 'Nom','attr': {'placeholder': 'Nom'}}) }}
    {{ form_row(form.email, {'label': 'Adresse mail','attr': {'placeholder': 'Email'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation de mot de passe','attr': {'placeholder': 'Répétez votre mot de passe'}}) }}
    <button type="submit" name="incription">Inscription</button>
  {{ form_end(form) }}
{% endblock %}
