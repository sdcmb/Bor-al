          <!-- Logo boreal -->
          <a class="logo" href="{{ path('accueil')}}"> <!-- Route renvoyant à l'accueil -->
          <img src="{{ asset('images/boreal_logo2.png')}}" alt="logo" ></a>  <!-- Asset permettant de faire appel aux images contenu dans public/images -->

          <form class="compte">

            {% if not app.user %} <!-- Si la personne n'est pas connecté on affiche un icone renvoyant à la connexion-->

              <a href="{{ path('security_login') }}"><!-- Route renvoyant à la connexion -->
              <img src="{{ asset('images/iconCompte.png') }}" alt="compte"></a> <!-- Asset permettant de faire appel aux images contenu dans public/images -->

            {% else %} <!-- Sinon on affiche une icone renvoyant à la modification du compte et une autre renvoyant à la déconnexion -->

              <a href="{{ path('security_update_account', {'UserId': app.user.getId} ) }}"><!-- Route renvoyant à la modification du compte -->
              <img src="{{ asset('images/iconCompte.png') }}" alt="modifCompte"></a> <!-- Asset permettant de faire appel aux images contenu dans public/images -->

              <a href="{{ path('security_logout') }}"> <!-- Route renvoyant à la déconnexion -->
              <img src="{{ asset('images/iconCompte.png') }}" alt="logout"></a><!-- Asset permettant de faire appel aux images contenu dans public/images -->

            {% endif %}

            {% if not app.user %} <!-- Si la personne n'est pas connecté l'icone du panier renvoie à la connexion -->

              <a href="{{ path('security_login') }}"> <!-- Route renvoyant à la connexion -->
              <img src="{{ asset('images/panier.svg') }}" alt="panier" ></a> <!-- Asset permettant de faire appel aux images contenu dans public/images -->

            {% else %} <!-- Sinon l'icone du panier renvoie au panier -->

              <a href="{{ path('afficherPanier', {'UserId': app.user.getId} ) }}"> <!-- Route renvoyant au panier -->
              <img src="{{ asset('images/panier.svg') }}" alt="panier"></a><!-- Asset permettant de faire appel aux images contenu dans public/images -->

