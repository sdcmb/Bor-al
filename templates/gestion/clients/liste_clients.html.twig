{% extends 'base.html.twig' %}


{% block body %}

<input class="retour_arriere" type="image" src="{{ asset('images/retour.png') }}" onClick="document.location.href = document.referrer" />

<div class="choixTrans">

  <table>
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Téléphone</th>
        <th>Email</th>
        <th>Adresse</th>
        <th>Code Postal</th>
        <th>Ville</th>
        <th>Pays</th>

      </tr>
    </thead>

    <tbody>
      {% for user in users %}				<!--   Affiche chaque user de l'Entity User initialisé dans GestionController l.71  -->
      <tr>
        <td>{{user.firstname}}</td>				<!--   Affiche prénom user  -->
        <td>{{user.lastname}}</td>				<!--   Affiche nom user  -->
        <td>{{user.telephone}}</td>				<!--   Affiche téléphone user  -->
        <td>{{user.email}}</td>		       	<!--   Affiche email user  -->
        <td>{{user.adresse}}</td>			  	<!--   Affiche adresse user  -->
        <td>{{user.codepostal}}</td>			<!--   Affiche codepostal user  -->
        <td>{{user.ville}}</td>			    	<!--   Affiche ville user  -->
        <td>{{user.pays}}</td>			     	<!--   Affiche pays user  -->
      </tr>
      {% endfor %}
    </tbody>

  </table>

</div>



{% endblock %}
