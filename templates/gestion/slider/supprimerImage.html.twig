{% extends 'base.html.twig' %}

{% block body %}

  <h2>Sélectionner l'image à supprimer'</h2></br>

  <form action="" id="suppImage" method="post">

    {% for fichier in fichiersAAfficher %}
      <div class="groupeImg">
        <input type="radio" id="casePour{{ fichier['fichier'] }}" name="cheminImage" value="{{ fichier['fichier'] }}">
        <label for="casePour{{ fichier['fichier'] }}">
          {{ fichier['fichier'] }} : <br>
          <img src="{{ asset('gestionSlider/img/' ~ fichier['fichier']) }}" alt="{{ fichier['fichier'] }}">
        </label>
      </div>
    {% endfor %}

    <br><br>
    <div id="bouton">
      <input type="submit" value="Valider">
    </div>

  </form>


{% endblock %}
