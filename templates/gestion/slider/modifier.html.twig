{% extends 'base.html.twig' %}

{% block body %}

<input class="retour_arriere"type="image" src="{{ asset('images/retour.png') }}" onclick="javascript:history.back()">

  <form action="" id="choixSlider" method="post">

    {% if slidersAAfficher is defined %}
    {# 1e itération : choix du slider #}

      <h2>Selectionner le panneau déroulant incorrect</h2></br>

      {% for slider in slidersAAfficher %}
        <div class="groupeSlider">
          <input type="radio" id="casePour{{ slider }}" name="cheminSlider" value="{{ slider }}">
          <label for="casePour{{ slider }}">{{ slider }}</label>
        </div>
      {% endfor %}

    {% else %}
    {# 2e itération : choix des images #}
    <input class="retour_arriere"type="image" src="{{ asset('images/retour.png') }}" onclick="javascript:history.back()">

      <h2>Effectuer les modifications voulues</h2></br>

      <div id="selectionImages">

        {% for fichier in fichiersAAfficher %}

          <div class="groupeImg">
            {% if fichier['dejaDedans'] %}
              <input type="checkbox" id="casePour{{ fichier['fichier'] }}" name="{{ fichier['index'] }}" value="on" checked='checked'>
            {% else %}
              <input type="checkbox" id="casePour{{ fichier['fichier'] }}" name="{{ fichier['index'] }}" value="on">
            {% endif %}
            <label for="casePour{{ fichier['fichier'] }}">
              {{ fichier['fichier'] }} : <br>
              <img src="{{ asset('gestionSlider/img/' ~ fichier['fichier']) }}" alt="{{ fichier['fichier'] }}">
            </label>
          </div>

        {% endfor %}

      </div>

      <div id="nomSlider">
        <input type="text" name="nomSlider" value="{{ nomSlider }}">
      </div>

    {% endif %}

    <br><br>
    <div id="bouton">
      <input type="submit" value="Valider">
    </div>

  </form>


{% endblock %}
