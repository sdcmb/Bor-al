{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}

<menu class="filtre">
	
		<label>
			Filtres
		 <img src="https://image.flaticon.com/icons/png/128/149/149271.png" alt="filtre" style="width:2%;"><br>

		<label>
				<select name="product-type" id="product-type" class="filter">
						<option value="0">Marque</option>
						<option value="1">Product type 1</option>
						<option value="2">Product type 2</option>
						<option value="3">Product type 3</option>
				</select>
		</label><br>

		<label>
				<select name="platform" id="platform" class="filter">
						<option value="0">Modèle</option>
						<option value="windows">Windows</option>
						<option value="osx">OSX</option>
						<option value="android">Android</option>
				</select>
		</label><br>

    <label>
				<select name="platform" id="platform" class="filter">
						<option value="0">Couleur</option>
						<option value="windows">Windows</option>
						<option value="osx">OSX</option>
						<option value="android">Android</option>
				</select>
		</label><br>

		<label>
				<select name="platform" id="platform" class="filter">
						<option value="0">Matière</option>
						<option value="windows">Windows</option>
						<option value="osx">OSX</option>
						<option value="android">Android</option>
				</select>
		</label>
</menu>


<div style="display: inline-block; border:solid 1px; width:70%; vertical-align: top;">

  <section class="products">

      {% for produit in produits %}

            <div class="product-card">

              <div class="product-image">
                  <a href="{{ path('produit_femmes', {'id' : produit.id}) }}"><img src="{{ produit.image }}" alt"produit"  style="width:200px;"></a>
              </div>
              <h4>{{ produit.marque }} {{ produit.modele }}</h4>
              <div class="product-info">
                  <p style="font-size:20px;">{{ produit.prix }}€<p>
              </div>

            </div>

      {% endfor %}

  </section>

</div>

{% endblock %}
