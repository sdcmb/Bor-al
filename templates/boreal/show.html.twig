{% extends 'base.html.twig' %}

{% block body %}

<article>

        <div class="content">

             <div class="titre-img">
                  <div>
                       <img src="{{ produit.image }}" alt"sac_desigual">
                  </div>
                  <div>
                       <h2>{{ produit.marque }} {{ produit.modele }}</h2>
                       <p>{{ produit.prix }}€ </br>
                            {% if app.user %}
                            <a href="{{ path('ajouterPanier', {'ProduitId': produit.id, 'UserId': app.user.getId }) }}" class"button primary-button">Ajouter au panier</a></p>
                            {% else %}
                            <a href="{{ path('security_login') }}" class"button primary-button">Ajouter au panier</a></p>
                            {% endif %}
                  </div>

             </div>

             <div class="delimitation">&nbsp;</div>

             <div class="detail-table">

                  <div>
                       <h3>Détail :</h3>
                       <p>{{ produit.description | raw }}</p>
                  </div>
                  <div>

                       <h3>Fiche technique :</h3>

                       <table class="table table-hover">
                            <tbody>
                                 <tr>
                                      <th scope="col">Référence</th>
                                      <th scope="col">{{ produit.reference }}</th>
                                 </tr>

                                 <tr class="table-active">
                                      <th scope="row">Poids</th>
                                      <td>{{ produit.poids }}Kg</td>
                                 </tr>
                                 <tr>
                                      <th scope="row">Modèle</th>
                                      <td>{{ produit.modele }}</td>
                                 </tr>
                                 <tr class="table-primary">
                                      <th scope="row">Matière</th>
                                      <td>{{ produit.matiere }}</td>
                                 </tr>
                                 <tr class="table-secondary">
                                      <th scope="row">Marque</th>
                                      <td>{{ produit.marque }}</td>
                                 </tr>
                                 <tr class="table-danger">
                                      <th scope="row">Dimensions (L*H*P)</th>
                                      <td>{{ produit.dimension }}</td>
                                 </tr>
                            </tbody>
                       </table>

                  </div>

             </div>

      </div>

</article>

{% endblock %}
