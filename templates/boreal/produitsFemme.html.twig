{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}

<menu class="filtre">				<!--   Filtrage des produits pour l'instant innactif, pas de js associé   -->

		<label>
				<select name="product-type" id="product-type" class="filter">

						<option value="0">Marque</option>
						<option value="1">Product type 1</option>
						<option value="2">Product type 2</option>
						<option value="3">Product type 3</option>
				</select>
		</label><br>

		<label>
				<select name="platform" id="platform" class="filter">

						<option value="0">Modèle</option>
						<option value="windows">Windows</option>
						<option value="osx">OSX</option>
						<option value="android">Android</option>
				</select>
		</label><br>

    		<label>
				<select name="platform" id="platform" class="filter">

						<option value="0">Couleur</option>
						<option value="windows">Windows</option>
						<option value="osx">OSX</option>
						<option value="android">Android</option>
				</select>
		</label><br>

		<label>
				<select name="platform" id="platform" class="filter">

						<option value="0">Matière</option>
						<option value="windows">Windows</option>
						<option value="osx">OSX</option>
						<option value="android">Android</option>
				</select>
		</label>
</menu>


<div class="aff_product">

  <section class="products">

      {% for produit in produits %}				<!--   Affiche chaque produit de l'Entity Produits initialisé dans BorealController l.30  -->
				{% if produit.categorie == "Femme" or produit.categorie == "femme" %} 				<!--   On vérifie que les produits affichés font bien  parti de la catégorie femme  -->
																																											<!--   On prend en compte si la cliente saisie Femme ou femme pour éviter tout oubli de produits  -->
            <div class="product-card">

						  <div class="load">

				              <div class="product-image">
				                  <a href="{{ path('produit_femmes', {'id' : produit.id}) }}"><img src="{{ produit.image }}" alt"produit"></a>				<!--   On affiche l'image du produit et on récupère son id  -->
				              </div>

				              <h4>{{ produit.marque }} {{ produit.modele }}</h4>

				              <div class="product-info">
				                  <p>{{ produit.prix }}€<p>
				              </div>
						   </div>
            </div>

				{% endif %}
      {% endfor %}

  </section>

	<a href="#" id="loadmore">Afficher plus de produits</a>

</div>
<script src="{{ asset('js/loadMore.js') }}"></script>				<!--   Script qui permet de limiter l'affichage à 15 produits  -->
																	<!--   Quand l'utilisateur clique sur "afficher plus" alors 15 autres produits apparaissent.
																	 Si il n'y a pas plus de produit à afficher alors le bouton devient un label indiquant qu'il n'y a pas plus de produit à afficher  -->
{% endblock %}
